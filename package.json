{
  "name": "holiday-tracker",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "description": "A fun web application that tracks holiday characters (Easter Bunny or Santa) around the world on their special day",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:easter": "VITE_HOLIDAY_MODE=easter vite",
    "dev:christmas": "VITE_HOLIDAY_MODE=christmas vite",
    "dev:easter:mock": "VITE_HOLIDAY_MODE=easter VITE_MOCK_TIME=\"2026-04-05T01:00:00\" vite",
    "dev:christmas:mock": "VITE_HOLIDAY_MODE=christmas VITE_MOCK_TIME=\"2025-12-24T23:59:30\" vite",
    "build": "tsc && vite build",
    "build:easter": "VITE_HOLIDAY_MODE=easter tsc && VITE_HOLIDAY_MODE=easter vite build",
    "build:christmas": "VITE_HOLIDAY_MODE=christmas tsc && VITE_HOLIDAY_MODE=christmas vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "preview:easter": "VITE_HOLIDAY_MODE=easter vite preview",
    "preview:christmas": "VITE_HOLIDAY_MODE=christmas vite preview",
    "test": "vitest --no-watch",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@turf/boolean-point-in-polygon": "^7.2.0",
    "@turf/helpers": "^7.2.0",
    "leaflet": "^1.9.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1"
  },
  "devDependencies": {
    "@types/leaflet": "^1.9.8",
    "@types/node": "^22.14.1",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.5.2",
    "vite": "^5.2.0",
    "vitest": "^1.4.0"
  }
}
